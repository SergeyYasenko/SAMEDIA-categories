@import 'fonts'

*
   padding 0
   margin 0
   border 0

*,
*::before,
*::after
   box-sizing border-box

:focus:active
   outline none

a:focus,
a:active
   outline none

nav,
footer,
header,
aside
   display block

html,
body
   height 100%
   width 100%
   font-family "Impact", sans-serif
   font-weight 700
   line-height 48.79px
   font-size 40px
   color #201714
   -ms-text-size-adjust 100%
   -moz-text-size-adjust 100%
   -webkit-text-size-adjust 100%

input,
button,
textarea
   font-family inherit

input
   outline none

button
   cursor pointer

button::-moz-focus-inner
   padding 0
   border 0

a,
a:visited
   text-decoration none

a:hover
   text-decoration none

ul li
   list-style none

img
   vertical-align top

h1
h2
h3
h4
h5
h6 
   font-size inherit
   font-weight 400

.main
   height 100vh
   display flex
   flex-direction column
   justify-content center
   background url("@img/сircle.svg") top 35.5% right 0px no-repeat,
   url("@img/seeds.svg") 67.5% 17% no-repeat,
   url("@img/seeds_op.svg") bottom 20% left 0px no-repeat
   background-size auto auto cover
   position relative

   @media (max-width 1000px)
      background url("@img/сircle.svg") top 35.5% right -8px no-repeat,
      url("@img/seeds.svg") right 30%  top 0 no-repeat,
      url("@img/seeds_op.svg") bottom 18% left -10px no-repeat
      padding 60px 30px
      display block

   @media (max-width 460px)
      padding 40px 15px
      background url("@img/seeds.svg") right 0  top 0 no-repeat,
      url("@img/seeds_op.svg") bottom 0% left -10px no-repeat

.img-anim
   transition all 0.3s ease
   width 370px
   height 225px
   position absolute
   left -77px
   top 22.5%
   z-index 0

   &.active
      left -80px
      transition all 0.3s ease

   @media (max-width 1670px)
      display none

.img-anim-br
   transition all 0.3s ease
   width 99px
   height 97px
   position absolute
   left 65.6%
   bottom 27.1%
   z-index 0

   &.active
      left 65%
      transition all 0.3s ease

   @media (max-width 1670px)
      display none

.categories
   max-width 1630px
   margin 0 auto
   text-align left

   @media (max-width 1630px)
      max-width 970px

   @media (max-width 970px)
      max-width 750px

   @media (max-width 767px)
      max-width none


.categories .title
   position relative
   margin-bottom 65px

   &::after
      content: ""
      position absolute
      width 88px
      height 4px
      background-color #FFCC01
      top 57px
      left 0

      @media (max-width 767px)
         top 45px

   @media (max-width 1000px)
      margin-bottom 40px

   @media (max-width 767px)
      font-size 36px
      line-height 40px
      margin-bottom 30px


.card-block
   display flex

   @media (max-width 1630px)
      flex-wrap wrap

   @media (max-width 1000px)
      display block

.card
   box-shadow 0px 4px 16px 0px #00000040
   min-width 376px
   max-height 188px
   border 2px solid #79C800
   border-radius 16px
   background #FFFFFF4D
   padding 24px 24px 13px 14px
   display flex
   flex 0 1 25%
   flex-direction column
   justify-content space-between
   margin 15px 32px 30px 0
   z-index 1
   position relative

   @media (max-width 1000px)
      margin-right 0px
      min-width auto

   @media (max-width 460px)
      max-height none

   &::before
      content ""
      position absolute
      right 1px
      bottom 1px
      width 72px
      height 72px
      border-radius 50%
      background-color #FFFFFF4D
      z-index 2

      @media (max-width 460px)
         display none

   &::after
      content ""
      position absolute
      left 0
      bottom 0px
      width 114px
      height 114px
      border-radius 50%
      background-color #FFFFFF4D
      z-index 2

      @media (max-width 460px)
         display none

   &__circle
      position absolute
      left 0px
      top 0px
      width 45px
      height 45px
      border-radius 50%
      background-color #FFFFFF4D
      z-index 2

      @media (max-width 460px)
         display none

   &:hover
      background-color #79C80066
      cursor pointer

      &:first-child
         padding-top 9px

      &::before
         animation move3 6s infinite linear

      &::after
         animation move2 6s infinite linear

      .card__circle
         animation move 6s infinite linear

      .card__img

         &:nth-child(2)
            display none

         &:nth-child(3)
            display block

   &:first-child

      .card__title
         font-size 28px
         line-height 32.87px

         @media (max-width 460px)
            margin-top 15px
            font-size 18px
            line-height 23px

   &:nth-child(2)
      padding-right 0

      .card__img
         margin-right 48px

   &:nth-child(4)
      padding 23px 23px 20px 15px

      .card__img
         width 172px
         height 114px

      .card__title
         margin-top -23px
         max-width 161px

         @media (max-width 460px)
            margin-top 15px

   &:last-child
      margin-right 0

   &__img
      max-width 245px
      margin-left auto
      z-index 4

      &:nth-child(3)
         display none

   &__title
      font-family "Raleway", sans-serif
      font-size 24px
      font-weight 700
      line-height 28.18px
      letter-spacing -1px
      z-index 4

      @media (max-width 460px)
         margin-top 15px
         font-size 18px
         line-height 23px

@keyframes move
   0%
      transform translate(0, 0)
      transform scale(0.5)

   30%
      transform translate(60px, 90px)

   50%
      transform translate(130px, 130px)
      transform scale(0.5)

   70%
      transform translate(300px, 30px)

   100%
      transform translate(0, 0)
      transform scale(1)

@keyframes move2
   0%
      transform translate(0, 0)
      transform scale(0.5)

   30%
      transform translate(150px, -90px)

   50%
      transform translate(300px,-80px);
      transform scale(0.5)

   70%
      transform translate(150px, -30px)

   100%
      transform translate(0, 0)
      transform scale(1)

@keyframes move3
   0%
      transform translate(0, 0)
      transform scale(0.5)

   30%
      transform translate(-150px, -90px)

   50%
      transform translate(-300px, -130px);
      transform scale(0.5)

   70%
      transform translate(-150px, -90px)

   100%
      transform translate(0, 0);
      transform scale(1)